amends "@pklr/Config.pkl"
import "@pklr/Docker.pkl"

docker {
  networks {
    ["picklr-net"] {
      driver = "bridge"
    }
  }

  volumes {
    ["picklr-vol"] {}
  }

  containers {
    ["picklr-app"] {
      image = "nginx:latest"
      ports {
        ["8081"] = 80
      }
      networks {
        "picklr-net"
      }
    }
  }
}
