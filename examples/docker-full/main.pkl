amends "@pklr/Config.pkl"
import "@pklr/Docker.pkl"

resources {
  local net = new Docker.Network {
    name = "picklr-net"
    driver = "bridge"
  }

  net

  new Docker.Volume {
    name = "picklr-vol"
  }

  new Docker.Container {
    name = "picklr-app"
    image = "nginx:latest"
    ports {
      ["8081"] = 80
    }
    networks {
      net.name
    }
    // volumes { ... } // Not yet implemented in schema/provider, but network is.
  }
}
