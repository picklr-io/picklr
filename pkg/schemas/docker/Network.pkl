module picklr.docker.Network

import "../Resource.pkl" as Core

class Network extends Core.Resource {
  provider = "docker"
  type = "docker_network"

  hidden name: String = ""

  /// The driver to use (e.g., "bridge", "overlay").
  hidden driver: String = "bridge"

  /// Check for duplicate networks
  hidden checkDuplicate: Boolean = true

  /// Restrict external access to the network.
  hidden internal: Boolean = false

  /// Labels to add to the network.
  hidden labels: Mapping<String, String>?

  properties = new {
    ["name"] = name
    ["driver"] = driver
    ["checkDuplicate"] = checkDuplicate
    ["internal"] = internal
    ["labels"] = labels
  }
}
